<%- include("partials/header") %> 
<section id="results">
  <div class="container align-items-center justify-content-center col-md-8" style="margin-top: 8%;">
    <div>
      <% if(message != '') { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    </div>
    <div class="holder">
      <div class="text-end">
        <a class="btn btn-primary" href="/teacher/add-result">Add Record</a>
      </div>
      <div>
        <h3>Total Students - <%- students.length %></h3>
      </div>
      <div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Roll No.</th>
              <th scope="col">Name</th>
              <th scope="col">Date of Birth</th>
              <th scope="col">Score</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach(function(student) { %>
            <tr>
              <td><%= student.rollNo %></td>
              <td><%= student.name %></td>
              <td><%= student.dob %></td>
              <td><%= student.score %></td>
              <td>
                <div class="row">
                  <div class="col-lg-6">
                    <a href="/teacher/update-result/<%= student._id %>"><i class="fas fa-solid fa-pen"></i></a>
                  </div>
                  <div class="col-lg-6">
                    <a href="/teacher/delete-result/<%= student._id %>" onclick="return confirm('Please Confirm!');"><i class="fas fa-regular fa-trash"></i></a>
                  </div>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- <p id="deletionConfirmation"></p>/ -->
</section>
<%- include("partials/footer") %> 